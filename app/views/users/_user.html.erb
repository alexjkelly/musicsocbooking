<tr>
	<td class="email">
		<%= link_to user.email, "mailto:#{user.email}" %>
	</td>
	<td class="confirmed">
		<%= user.confirmed? %>
	</td>
	<td class="admin">
		<%= user.admin? %>
	</td>
	<td class="options">
		<% if user.confirmed? %>
			<%= link_to "Unconfirm User", unconfirm_user_path(user.id), :method => :put %>
		<% else %>
			<%= link_to "Confirm User", confirm_user_path(user.id), :method => :put %>
		<% end %>
	</td>
</tr>